{
  "$schema": "https://turbo.build/schema.v2.json",
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        "apps/api/dist/**",
        "apps/web/dist/**",
        "apps/mobile/build/**",
        "packages/ui/lib/**",
        "packages/types/lib/**"
      ]
    },
    "lint": {
      "outputs": []
    },
    "test": {
      "outputs": []
    }
  }
}