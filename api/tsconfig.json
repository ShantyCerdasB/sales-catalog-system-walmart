{
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    "rootDir": "src",
    "outDir": "dist",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {},
    "composite": false
  },
  "include": [
    "src/**/*.ts",
    "../prisma/seed.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
