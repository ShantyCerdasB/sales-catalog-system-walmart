{
  "name": "@sales-catalog/api",
  "version": "1.0.0",
  "private": true,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build:api": "tsc -p tsconfig.json",
    "build:func": "tsc -p functionapp/tsconfig.func.json",
    "build": "npm run build:api && npm run build:func",
    "start": "node dist/index.js",
    "lint": "eslint \"src/**/*.{ts,js}\"",
    "migrate": "prisma migrate dev",
    "generate": "prisma generate",
    "seed": "ts-node prisma/seed.ts",
    "func:local": "func start --script-root dist/functions",
    "dev:func": "concurrently \"npm run dev\" \"tsc -w -p functionapp/tsconfig.func.json\" \"func start --script-root dist/functions\"",
    "migrate:test": "prisma migrate deploy",
    "test:unit": "jest src/test/unit ",
    "test:integration": "cross-env NODE_ENV=test jest --runInBand src/test/integration/authController.spec.ts src/test/integration/clientController.spec.ts",
    "test": "npm run test:unit && npm run test:integration"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "dependencies": {
    "@azure/functions": "^4.3.0",
    "@azure/identity": "^2.1.0",
    "@azure/keyvault-secrets": "^4.4.0",
    "@faker-js/faker": "^9.8.0",
    "@prisma/client": "^5.12.0",
    "@sendgrid/mail": "^8.1.0",
    "argon2": "^0.43.0",
    "azure-function-express": "^2.0.0",
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "express-async-errors": "^3.1.1",
    "express-rate-limit": "^7.5.0",
    "express-xss-sanitizer": "^2.0.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "jwks-rsa": "^3.0.1",
    "perfect-express-sanitizer": "^2.0.2",
    "prom-client": "^15.1.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^9.0.0",
    "winston": "^3.15.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^20.11.19",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "concurrently": "^8.2.1",
    "cross-env": "^7.0.3",
    "dotenv": "^16.5.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prisma": "^5.12.0",
    "supertest": "^7.1.1",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.4"
  }
}
