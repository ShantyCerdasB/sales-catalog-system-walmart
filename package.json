{
  "name": "sales-catalog-system",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@8.6.0",
  "description": "Monorepo for Sales Catalog System API, Web and Mobile",
  "license": "MIT",
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test"
  },
  "devDependencies": {
    "turbo": "^1.10.0",
    "typescript": "^4.9.5",
    "eslint": "^8.32.0",
    "prettier": "^2.8.4",
    "husky": "^8.0.1",
    "@commitlint/cli": "^17.5.0",
    "@commitlint/config-conventional": "^17.5.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pnpm lint",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
