{
  "name": "sales-catalog-system",
  "version": "1.0.0",
  "private": true,
  "description": "Sales Catalog System API (serves React static files)",
  "license": "MIT",
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "clean": "rimraf dist api/web-dist",
    "build:web": "npm --prefix web run build",
    "build:api": "tsc -p api/tsconfig.json",
    "build": "npm run clean && npm run build:web && npm run build:api",
    "dev:api": "ts-node-dev --respawn --transpile-only src/index.ts",
    "dev": "npm run clean && npm run build:web && npm run dev:api",
    "start": "node dist/index.js"
  },
  "dependencies": {
    "@prisma/client": "^4.x",
    "express": "^4.x",
    "prom-client": "^14.x",
    "uuid": "^9.x"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.5.0",
    "@commitlint/config-conventional": "^17.5.0",
    "@types/cookie-parser": "^1.4.8",
    "@types/express": "^5.0.2",
    "@types/express-rate-limit": "^5.1.3",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.15.27",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^10.0.0",
    "artillery": "^2.0.0-29",
    "eslint": "^8.32.0",
    "husky": "^8.0.1",
    "jest": "^29.x",
    "prettier": "^2.8.4",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.x",
    "ts-node-dev": "^2.x",
    "typescript": "^4.9.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pnpm lint",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
